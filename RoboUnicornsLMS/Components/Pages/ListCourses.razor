@page "/ListCourses"
@rendermode InteractiveServer
@inject HttpClient HttpClient

<PageTitle>Courses</PageTitle>

<div class="container">
    <div class="row align-items-center mb-3">
        <div class="col">
            <NavLink class="nav-link" href="">
                <span class="add-course"> <i class="bi bi-plus-circle"></i>Add course</span>
            </NavLink>
        </div>
        <div class="col text-center">
            <h2>Courses</h2>
        </div>
        <div class="col"></div>
    </div>
</div>

<table class="table table-striped table-dark">
    <thead>
    <tr>
        <th scope="col">@nameof(Course.Title)</th>
        <th scope="col">@nameof(Course.Description)</th>
        <th scope="col">@nameof(Course.Start)</th>
        <th scope="col">@nameof(Course.End)</th>
         <th scope="col">Details</th>
    </tr>
    </thead>
    <tbody>
    @foreach (Course x in courses)
    {
        <tr>
            <td>
                <p>@x.Title</p>
            </td>
            <td>
                <p>@x.Description</p>
            </td>
                <td>
                    <p>@x.Start.ToShortDateString()</p>
                </td>
                <td>
                    <p>@x.End.ToShortDateString()</p>
                </td
                <td>
                   <a href="/ListModules/@x.Id" class="button">View</a>
                </td>
        </tr>
    }
    </tbody>
</table>
@code {

    List<Course> courses = new();

    protected override async Task OnInitializedAsync()
    {
        // await HttpClient.GetAsync("/api/courses");

        courses = await HttpClient.GetFromJsonAsync<List<Course>>("/api/courses") ?? new();

    }

}
